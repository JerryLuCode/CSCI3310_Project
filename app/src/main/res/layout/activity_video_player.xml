<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VideoPlayerFolder.VideoPlayer"
    android:background="#212121">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:auto_show="true"
            app:show_buffering="when_playing"
            app:show_shuffle_button="true"
            tools:layout_editor_absoluteX="-42dp"
            tools:layout_editor_absoluteY="-172dp">

        </androidx.media3.ui.PlayerView>

        <ImageView
            android:id="@+id/share_button_video"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="20dp"
            android:src="@drawable/share_image_white"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.slider.Slider
            android:id="@+id/volumeSlider"
            android:layout_width="108dp"
            android:layout_height="44dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:stepSize="1.0"
            android:value="100.0"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tickVisible="false" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/fragment_video_player"
        android:name="edu.cuhk.csci3310.mediaplayer.VideoPlayerFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</FrameLayout>